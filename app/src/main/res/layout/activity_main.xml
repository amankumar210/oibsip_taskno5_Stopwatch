<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#C59494"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="182dp"
            android:layout_height="147dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/oasislogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="290dp"
            android:layout_height="76dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="#A9CF7E"
            android:gravity="center"
            android:textColor="#CA2222"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="Start"
                android:text="Start"
                app:backgroundTint="#FF0051" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="Stop"
                android:text="stop"
                app:backgroundTint="#000000" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="Hold"
                android:text="Hold"
                app:backgroundTint="#4ED530" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="60dp"
            android:background="#746DD6"
            android:gravity="center"
            android:text="This app is developed as a part of Android Development Internship"
            android:textColor="#200D0D"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>